pipeline {
    agent any

    

    stages {
       stage ('TF Initialize') {
            steps {
                sh "sudo teraform/terraform init -input=false"
            }
            
       }
       stage ('Pre Checks') {
            
            steps {
                script {
                    sh "sudo /teraform/terraform workspace select dev"
                }
            }
        }

        
       stage ('TF destroy') {
            steps {
                sh "sudo terraform/terraform destroy -auto-approve"
            }
        }
        
     }

        
}

       
