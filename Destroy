pipeline {
    agent any

    

    stages {

        

        stage ('TF Initialize') {
            steps {
                sh "terraform init -input=false"
            }
        }

        stage ('Pre Checks') {
            
            steps {
                script {
                    sh "terraform workspace select demo"
                }
            }
        }

        
        
        stage ('TF destroy') {
            steps {
                sh "terraform destroy -force"
            }
        }
    }
}

       
