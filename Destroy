pipeline {
    agent any

    

    stages {
       stage ('TF Initialize') {
            steps {
                sh "teraform/Amitdevops/INFRA/terraform init"
            }
            
       }
       stage ('Pre Checks') {
            
            steps {
                script {
                    sh "sudo /teraform/Amitdevops/INFRA/terraform workspace select dev"
                }
            }
        }

        
       stage ('TF destroy') {
            steps {
                sh "/terraform/Amitdevops/INFRA/terraform destroy -auto-approve"
            }
        }
        
     }

        
}

       
