pipeline {
    agent any

    

    stages {
       stage ('TF Initialize') {
            steps {
                sh "terraform init"
            }
            
       }
       stage ('Pre Checks') {
            
            steps {
                script {
                    sh "terraform workspace select demo"
                }
            }
        }

        
       stage ('TF destroy') {
            steps {
                sh "terraform destroy -auto-approve"
            }
        }
        
     }

        
}

       
